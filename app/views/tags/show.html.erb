<%= content_for(:title, "#{@tag.name} - Deviser Club") %>

<%= render "components/aside_bar/aside_bar" do %>
  <div class="w-full min-h-screen px-3 lg:px-16 py-7 md:py-10">
    <h1 class="font-bold text-xl md:text-2xl lg:text-4xl">Tag: <%= @tag.name %></h1>
    <div class="my-5">
      <%= @tag.description %>
    </div>
    <%= render @tag.mixed_posts %>
  </div>


  <%= content_for :right_aside_bar do %>
    <div class="px-6 py-4">
      <h3 class="font-bold text-xl md:text-2xl lg:text-4xl mb-3">Tags</h3>
      <%= render "tags/tag_list" %>
    </div>
  <% end %>
<% end %>

