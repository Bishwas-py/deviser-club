<% posts.each do |post| %>
  <%= link_to post_path(post.friendly_id), class: "hover:bg-slate-100 rounded-xl p-2" do %>
    <div>
      <h3 class="text-md font-bold">
        <%= post.title %>
      </h3>
      <span class="text-sm text-slate-500">
        Posted by <strong><%= post.user.username %></strong>
      </span>
    </div>
  <% end %>
<% end %>