<%= render "components/setting-navbar" do %>
  <%= form_for(@profile, html: { method: :put, class: 'space-x-5 w-full' }) do |f| %>

    <div class="space-y-7">
      <div class="input-father">
        <%= f.label :name, class: "input-label" %>
        <%= f.text_field :name, class: "input-box-2", required: true, autocomplete: "name", placeholder: "First Last Name" %>
      </div>

      <div class="input-father">
        <%= f.label :bio, class: "input-label" %>
        <%= f.text_field :bio, class: "input-box-2", autofocus: true, placeholder: "Your Bio" %>
      </div>

      <div class="input-father">
        <%= f.label :description, class: "input-label" %>
        <%= f.text_area :description, class: "input-box-2", placeholder: "Your Description" %>
      </div>


      <div class="input-father">
        <%= f.label :avatar, class: "input-label" %>
        <div class="flex space-x-3">
          <% if @profile.avatar %>
            <%= image_tag(@profile.avatar, class: "rounded-full w-12 h-12 my-auto") if @profile.avatar.attached? %>
          <% end %>
          <%= f.file_field :avatar, class: "input-box-2" %>
        </div>
      </div>

      <div class="input-father">
        <%= f.submit "Update", class: "auth-btn" %>
        <%= link_to "Back", :back, class: "auth-co-btn" %>
      </div>
    </div>
  <% end %>

<% end %>