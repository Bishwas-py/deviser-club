<%= content_for(:title, "Deviser Club ~ A club for anon discussion ~ Rails App") %>
<div class="w-full p-9">
  <div class="container mx-auto py-10" id="nq">
    <%= render "form", quick_tweet: @quick_tweet %>
  </div>
  <h1 class="font-bold text-2xl md:text-3xl text-center">
    Devises
  </h1>
  <%= turbo_stream_from :quick_tweets %>
  <div id="quick_tweets" class="h-auto text-sm text-sm columns-1 sm:columns-1 md:columns-2 lg:columns-3 xl:columns-4 2xl:columns-5 2xl:text-md gap-3 mx-auto space-y-9 py-9 md:px-3">
    <%= render @quick_tweets %>
  </div>
</div>
<%= button_to "",  class: "rounded-full h-16 w-16 grid backdrop-blur place-items-center hover:bg-blue-900/80 bg-blue-700/80 fixed text-white block text-2xl bottom-6 right-6",
            data: {
              controller: 'quick-tweet',
              action: 'quick-tweet#addTweet',
              quick_tweet_id_param: "#{dom_id(@quick_tweet)}_form",
              quick_tweet_body_param: "nq"
            } do %>
  +
<% end %>

<footer
  class="flex bg-white/80 dark:bg-black/80 dark:text-indigo-100
                h-24 w-full items-center justify-center border-t dark:border-gray-900">
  <a
    class="flex items-center justify-center gap-2"
    href="https://webmatrices.com/"
    target="_blank"
    rel="noopener noreferrer"
  >
    Powered by
    <span class="text-2xl font-bold">Webmatrices</span>
  </a>
</footer>