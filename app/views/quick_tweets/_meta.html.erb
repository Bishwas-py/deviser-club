<% if @quick_tweet.image.attached? %>
  <meta property="og:image" content="<%= rails_blob_url @quick_tweet.image %>"/>
  <meta property="og:image:secure_url" content="<%= rails_blob_url @quick_tweet.image %>"/>
<% end %>
<meta property="og:image:alt" content="<%= @quick_tweet.excerpt %>"/>
<meta name="description" content="<%= @quick_tweet.excerpt %>"/>
<meta property="article:tag" content="<%= @quick_tweet.excerpt %>"/>