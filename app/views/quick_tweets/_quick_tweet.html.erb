<% if can? :read, quick_tweet %>
  <%= turbo_stream_from quick_tweet %>
  <div class="w-full" id="<%= dom_id quick_tweet %>">
    <div class="post-box">
      <%= link_to profile_show_path(quick_tweet.user.friendly_id), class: "text-neutral-500 group inline-block mb-2", title: "Author: #{quick_tweet.user.username}" do %>
        <span class="author-info block mb-2" title="Author: <%= quick_tweet.user.username %>">
            Posted by <strong><%= quick_tweet.user.username %></strong>
           <div class="posts-tag">
             <%= icon "fa-solid", "truck-fast", class: "text-sm" %>
            </div>
        </span>
      <% end %>
      <%= link_to quick_tweet do %>
        <div>
          <h2 class="font-bold break-words text-3xl mb-2 text-slate-700 dark:text-stone-100">
            <%= quick_tweet.title.truncate(40) %>
          </h2>
          <div class="excerpt">
            <%= quick_tweet.excerpt %>
          </div>
        </div>
        <div class="mt-3">
          <div class="block mb-2 space-x-2">
          <span class="tag-block" title="<%= quick_tweet.created_at.to_fs %>">
            <%= icon "fa-regular", "eye", class: "mr-2" %>
            <%= quick_tweet.watches %> Views
          </span>
            <span class="" title="<%= quick_tweet.created_at.to_fs %>">
            <%= time_ago_in_words(quick_tweet.created_at) %>
          </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>