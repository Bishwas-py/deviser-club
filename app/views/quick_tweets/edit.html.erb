<%= content_for(:title, "Edit: #{@quick_tweet.title} - Deviser Tweet") %>

<div class="grid place-items-center bg-blue-100 dark:bg-slate-600 min-h-screen smart-padding">
  <%= form_with model: @quick_tweet, class: "w-full rounded overflow-hidden", id: "#{dom_id(@quick_tweet)}_form" do |form| %>
    <%= render "components/editor/edit", form: form, field: :body %>
  <% end %>

  <style>
      .ProseMirror {
          min-height: 50vh;
          max-height: 70vh;
          overflow-y: scroll;
      }
  </style>

</div>
