<div class="col-span-2 smart-padding">
  <div class="px-1 py-5 font-bold text-neutral-700 object-cover">
    <div class="grid grid-cols-1 md:grid-cols-2">
      <div class="flex space-x-4 mb-2">
        <div class="grid place-items-center">
          <%= image_tag "fav.png", class: "max-w-fit w-11 rounded-full bg-sky-100" %>
        </div>
        <div>
          <div class="text-cyan-500 font-light">
            <%= @post.user.username %>
          </div>
          <span class="text-slate-600 font-light" title="<%= @post.created_at.to_fs %>"><%= time_ago_in_words(@post.created_at) %></span>
          <span class="mx-1">Â·</span>
          <span class="text-slate-600 font-light" title="<%= @post.created_at.to_fs %>"><%= "#{@post.reading_time} #{"minute".pluralize @post.reading_time} read" %></span>
        </div>
      </div>
      <div class="flex sm:justify-end space-x-2">
        <% if current_user.nil? %>
          <%= content_tag :div, class: "hover:text-rose-800 text-rose-500 focus:text-sky-500 duration-400 box" do %>
          <span>
            <%= icon "fa-regular", "bookmark" %>
            <%= @post.bookmarks.count %>
          </span>
          <% end %>
        <% else %>
          <%= render "bookmark/create", bookmarkable: @post %>
        <% end %>
        <a
           target="popup"
           href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>&amp;src=sdkpreparse"
           data-size="large">
          <%= icon "fab", 'facebook', class: "icon-share" %>
        </a>

        <a
          target="popup"
          href="https://twitter.com/intent/tweet?text=<%= "#{@post.title} #{request.original_url}" %>"
          data-size="large">
          <%= icon "fab", 'twitter', class: "icon-share" %>
        </a>

        <a
          target="popup"
          href="https://www.linkedin.com/sharing/share-offsite/?mini=true&url=<%= CGI.escape(request.original_url) %>"
          data-size="large">
          <%= icon "fab", 'linkedin', class: "icon-share" %>
        </a>
      </div>
    </div>

  </div>

</div>