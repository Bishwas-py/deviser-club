<%= render "components/errors", error_el: @post %>

<div class="flex justify-between px-10 md:px-32 py-7 w-full">
  <div class="flex items-stretch flex justify-center">
    <%= image_tag "fav.png", class: "w-7" %>
    <span class="my-auto">Posting something new</span>
    <span class="my-auto mx-4 text-sm font-light text-slate-500">Saved!</span>
  </div>
  <div class="space-x-6">
    <button class="bg-cyan-600 text-cyan-50 px-2 py-0 rounded-xl inline-block">
      Publish
    </button>
    <%= image_tag "fav.png", class: "w-9 rounded-full bg-sky-100 inline-block" %>
  </div>
</div>
<div class="grid place-items-center md:px-48">

  <%= form_with(model: @post, class: "w-full") do |form| %>
    <div class="my-5">
      <%= form.text_field :title,
                          placeholder: 'Story Title',
                          class: "block text-4xl focus:border-l focus:border-slate-700 font-light py-2 border-0 bg-white/10 backdrop-blur focus:outline-none focus:ring-0 h-12 px-3 py-2 mt-2 w-full" %>
    </div>
    <%= render "components/editor/edit", field: :body, form: form %>
  <% end %>
</div>
<style>
    .ProseMirror {
        min-height: 100vh;
    }
</style>