<% if user_signed_in? %>
  <div id="appearance_toggle">
    <%= button_to set_appearance_profile_index_path, class: "toogle-bar-item text-left w-full", data: { controller: "dark-mode" } do %>
      <% if current_user.profile.dark? %>
        <%= icon "fas", "sun" %>
      <% else %>
        <%= icon "fas", "moon" %>
      <% end %>
      <span>Toggle Appearance</span>
    <% end %>
  </div>
<% end %>