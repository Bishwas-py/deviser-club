<% if alert %>
  <div id="error_explanation"
       class="fixed right-1 top-2 sm:w-fit sm:top-4 sm:right-7 z-50 space-y-2">
    <div
      data-controller="self-destroy"
      class="flex justify-between bg-red-100/90 backdrop-blur w-80 text-red-500 font-medium rounded-xl overflow-hidden">
      <div class="py-2 px-3 grid place-items-center"><%= simple_format alert %></div>
      <button
        class="bg-red-200/70 grid place-items-center
          px-4 text-2xl md:text-3xl text-white">&times;
      </button>
    </div>
  </div>
<% end %>

<% if notice %>
  <div id="error_explanation"
       class="fixed right-1 top-2 sm:w-fit sm:top-4 sm:right-7 z-50 space-y-2">
    <div
      data-controller="self-destroy"
      class="flex justify-between bg-green-100/90 backdrop-blur w-80 text-green-500 font-medium rounded-xl overflow-hidden">
      <div class="py-2 px-3 grid place-items-center"><%= simple_format notice %></div>
      <button
        class="bg-green-200/70 grid place-items-center
          px-4 text-2xl md:text-3xl text-white">&times;
      </button>
    </div>
  </div>
<% end %>