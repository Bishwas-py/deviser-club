<div id="<%= defined?(error_id) ? error_id : "error_explanation" %>" class="bg-red-50 text-red-500 font-medium">
  <% if defined? errors %>
    <ul class="py-2 px-3 grid place-items-center">
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<% if notice %>
  <div id="error_explanation" class="bg-green-50 text-green-500 px-3 py-2 font-medium py-2 px-3 grid place-items-center">
    <%= simple_format notice %>
  </div>
<% end %>

<% if alert %>
  <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium grid place-items-center">
    <%= simple_format alert %>
  </div>
<% end %>