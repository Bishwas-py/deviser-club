<div id="<%= defined?(error_id) ? error_id : "error_explanation" %>" class="bg-red-50 text-red-500 font-medium">
  <% if defined? errors %>
    <ul class="py-2 px-3 grid place-items-center">
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
