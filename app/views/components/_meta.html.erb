<% if @quick_tweet.id.nil? %>
  <meta property="og:image" content="<%= image_url "deviser.club.png" %>">
  <meta property="og:image:secure_url" content="<%= image_url "deviser.club.png" %>">
  <meta property="og:image:alt" content="creative blogging platform for creative writers, bloggers and developers">
  <meta name="description" content="A creative blogging platform for creative writers, bloggers and developers.">
  <meta property="article:tag" content="creative writing platform, medium alternative, blogging platform, anynomous posting">
<% else %>
  <meta property="og:image" content="<%= rails_blob_url @quick_tweet.image %>">
  <meta property="og:image:secure_url" content="<%= rails_blob_url @quick_tweet.image %>">
  <meta property="og:image:alt" content="<%= sanitize(@quick_tweet.content, tags: %w()).strip.truncate(255) %>">
  <meta name="description" content="<%= sanitize(@quick_tweet.content, tags: %w()).strip.truncate(255) %>">
  <meta property="article:tag" content="<%= sanitize(@quick_tweet.content, tags: %w()).strip.truncate(255) %>">
<% end %>

<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="1024">
<meta property="og:image:height" content="512">